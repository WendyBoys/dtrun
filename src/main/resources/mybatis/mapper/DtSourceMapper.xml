<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuan.dtrun.mapper.DtSourceMapper">

    <insert id="create"  parameterType="user">
          insert into  dtsource (dtsourcename,dtSourceType,dtsourceJson,createTime) VALUES (#{dtsourcename},#{dtSourceType},#{dtsourceJson},#{createTime})
    </insert>

    <select id="findAll"  parameterType="java.lang.Integer" resultMap="">
       SELECT dtSourceName,dtSourceType,dtSourceJson,dtsource.createTime FROM dtsource LEFT JOIN user ON dtsource.uid = user.id  WHERE  user.id=#{id}
    </select>

</mapper>